<Window x:Class="ProjectManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager.UI"
        xmlns:uc ="clr-namespace:ProjectManager.UI.Views"
        xmlns:vm="clr-namespace:ProjectManager.UI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="300" MinWidth="500"
        Closed="MainWindow_OnClosed">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" 
                  Width="100"
                  Margin="5"
                  HorizontalAlignment="Left" 
                  ItemsSource="{Binding Languages}" 
                  SelectedItem="{Binding SelectedLang}" 
                  DisplayMemberPath="Name"/>
        <Frame x:Name="Frame" Grid.Row="1"/>
    </Grid>
</Window>
