<Window x:Class="ProjectManager.UI.Views.ProjectSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager.UI.Views"
        mc:Ignorable="d"
        Height="100" Width="400">
    <StackPanel>
        <TextBlock Width="350" Text="Title"/>
        <TextBox Width="350" Text="{Binding Name}"/>
        <Button Margin="5" Content="{DynamicResource Save}" Width="100" IsDefault="True" Click="Button_Click"/>
    </StackPanel>
</Window>
